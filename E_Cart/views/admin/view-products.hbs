<section>
  <div class="container">

    <div class="row mt-5">
      <div class="d-flex justify-content-end mb-2">
        <a href="/admin/add-product" class="btn btn-success">Add product</a>
      </div>
    </div>

    {{! <div class="row">
            <a href="" class="btn btn-success ml-auto">Add product</a>
        </div> }}

    <table class="table mt-5">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Title</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th scope="col">Image</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
          <tr>
            <th scope="row">1</th>
            <td>{{this.Name}}</td>
            <td>{{this.Category}}</td>
            <td>{{this.Description}}</td>
            <td><img
                style="width: 50px; height: 50px;"
                src="/product-images/{{this._id}}.jpg"
                alt=""
              /></td>
              <td>
                <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delte {{this.name}}')">Delete</a>
              </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>